{
  "manifest_version": 3,
  "name": "Whatnot Live Sniffer",
  "version": "0.4",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "downloads",
    "sidePanel"
  ],
  "host_permissions": [
    "https://www.whatnot.com/*",
    "https://api.whatnot.com/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.whatnot.com/live/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Whatnot Sniffer"
  },
  "side_panel": {
    "default_path": "panel.html",
    "openPanelOnActionClick": true
  }
}
